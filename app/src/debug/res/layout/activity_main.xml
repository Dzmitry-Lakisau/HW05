<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="by.dzmitry_lakisau.hw05.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="302dp"
        android:layout_height="51dp"
        android:text="Run thread"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.662" />

    <Button
        android:id="@+id/fu_true_v_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fu_true_v_2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/fu_false_v_2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/fu_false_v_2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fu_true_v_2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/fu_true_v_1"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text="@string/fu_true_v_1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fu_false_v_2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/fu_false_v_1"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text="@string/fu_false_v_1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fu_true_v_1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
